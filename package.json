{
  "name": "portfolio-website-krsiak-cz",
  "version": "2.48.23",
  "private": true,
  "scripts": {
    "dev": "bun next dev",
    "build": "bun next build",
    "start": "bun next start",
    "lint": "bun next lint",
    "lint:fix": "bun next lint --fix --max-warnings=0",
    "prettier:check": "bun prettier --check .",
    "prettier:write": "bun prettier --write .",
    "type-check": "bun tsc --noEmit",
    "test:jest": "bun jest",
    "test:jest:coverage": "bun jest --coverage",
    "test:jest:watch": "bun jest --watch",
    "test:e2e": "bun playwright test",
    "test:e2e:ui": "bun playwright test --ui",
    "test:e2e:chrome": "bun playwright test --project=chromium",
    "test:e2e:codegen": "bun playwright codegen",
    "test:e2e:debug": "bun playwright test --debug",
    "validate": "bun type-check && bun lint && bun test:jest",
    "integrate": "bun type-check && bun lint && bun test:jest && bun test:e2e",
    "pre-commit": "bun lint-staged",
    "pre-commit-check": "./scripts/pre-commit-check.sh",
    "clean": "rm -rf ./node_modules",
    "clean:install": "rm -rf ./node_modules && bun install",
    "deps:outdated": "bun outdated"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "@next/third-parties": "15.4.6",
    "daisyui": "^5.0.50",
    "lunarphase-js": "^2.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-tooltip": "5.29.1",
    "sharp": "0.34.3",
    "ts-jest": "29.4.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@happy-dom/jest-environment": "^18.0.1",
    "@netlify/plugin-nextjs": "5.12.0",
    "@playwright/test": "1.54.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "1.2.19",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "eslint": "9.32.0",
    "eslint-config-next": "15.4.6",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.4",
    "next": "15.4.6",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bun eslint --fix --max-warnings=0",
      "bun prettier --write"
    ],
    "*.{css,scss,md,json,yml}": [
      "bun prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'bun tsc --noEmit'"
    ]
  },
  "module": "index.ts",
  "type": "module"
}
