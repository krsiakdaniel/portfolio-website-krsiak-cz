#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ—ï¸  Running post-commit quality gates..."

# Run TypeScript type checking
echo "ğŸ”§ Running TypeScript type checking..."
bun tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed!"
  echo "ğŸ”„ Consider fixing the issues and creating a follow-up commit."
fi

# Run Jest tests
echo "ğŸ§ª Running Jest unit tests..."
bun test:jest
if [ $? -ne 0 ]; then
  echo "âŒ Jest unit tests failed!"
  echo "ğŸ”„ Consider fixing the failing tests and creating a follow-up commit."
fi

# Run E2E smoke tests (basic tests only, not full suite)
echo "ğŸŒ Running E2E smoke tests..."
bun playwright test --grep="smoke|critical" --reporter=line
if [ $? -ne 0 ]; then
  echo "âš ï¸  E2E smoke tests failed or no smoke tests found."
  echo "ğŸ’¡ Consider running full E2E suite: bun test:e2e"
fi

echo "ğŸ‰ Post-commit quality gates completed!"
echo "ğŸ’¡ For full integration testing, run: bun integrate"
